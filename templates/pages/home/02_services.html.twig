<div class="container">
    <div class="row align-content-center mb-100">
        <div class="col-lg-6 align-self-center mb-30 mb-lg-0">
            <p class="rdn_subtext" data-cue="slideInUp">
                {{ 'home.services.caption' | trans | capitalize }}
            </p>
            <h2 class="rdn_title mb-0" data-cue="slideInUp" data-delay="200">
                {{ 'home.services.title' | trans | capitalize | raw }}
            </h2>
        </div>
        <div class="col-lg-6 align-self-end">
            <p class="rdn_boldtext">
                {{ 'home.services.text' | trans | capitalize }}
            </p>
        </div>
    </div>
    <div class="row" data-cues="slideInUp">
        {% set icons = ['star', 'handshake', 'users-three'] %}
        {% for i in 1..3 %}
        <div class="col-lg-4 align-self-center mb-30 event_outer col-md-6">
            <div class="text_icon">
                <div class="top_icon">
                    <img src="{{ asset('images/services/' ~ loop.index ~ '.jpg') }}" alt="images">
                    <p>{{ ('home.services.service.' ~ loop.index ~ '.tag') | trans | capitalize }}</p>
                </div>
                <div class="bottom_icon">
                    <div class="content_icon">
                        <p>{{ ('home.services.service.' ~ loop.index ~ '.keyword') | trans | capitalize }}</p>
                        <h2 class="rdn_subtitle align-self-start">{{ ('home.services.service.' ~ loop.index ~ '.catchphrase') | trans | capitalize }}</h2>
                    </div>
                    <i class="ph ph-{{ icons[loop.index0] }} icon_service"></i>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>