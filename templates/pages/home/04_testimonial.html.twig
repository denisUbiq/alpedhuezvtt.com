<div class="container">
    <div class="testi_inner">
        <div class="row">
            <div class="col-lg-6">
                <div class="testi_outer">
                    <p class="rdn_subtext" data-cue="slideInUp">{{ 'home.testimonial.caption' | trans | capitalize }}</p>
                    <h2 class="rdn_title" data-cue="slideInUp" data-delay="200">{{ 'home.testimonial.title' | trans | capitalize }}</h2>
                    <div class="testi_slider">
                        <div class="swiper-wrapper">
                            {% for i in 1..3 %}
                            <div class="swiper-slide">
                                <div class="testi_item">
                                    <p>
                                        {{ ('home.testimonial.customers.' ~ loop.index ~ '.text') | trans | capitalize }}
                                    </p>
                                    <i class="ph ph-quotes"></i>
                                </div>
                                <div class="testi_box">
                                    <img class="testi_img" src="{{ asset('images/testimonial/' ~ loop.index ~ '.jpg') }}" alt="image">
                                    <div class="testi_box_content">
                                        <h3>{{ ('home.testimonial.customers.' ~ loop.index ~ '.author') | trans | capitalize }}</h3>
                                        <p>{{ ('home.testimonial.customers.' ~ loop.index ~ '.label') | trans | capitalize }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="swiper_testi_btn">
                        <i class="prev_testi ph ph-caret-left"></i>
                        <i class="next_testi ph ph-caret-right"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 testi_right">
                <img src="{{ asset('images/testimonial/mono.png') }}" alt="image" data-cue="slideInUp">
                <div class="team_info_box" data-cue="slideInUp" data-delay="200">
                    <div class="team_info_box_content">
                        <h3>Phil Amard</h3>
                        <p class="rdn_subtext">{{ 'home.testimonial.instructor_caption' | trans | capitalize }}</p>
                    </div>
                    <img src="{{ asset('images/testimonial/mono_small.jpg') }}" alt="img">
                </div>
                <div class="white_box" data-cue="slideInLeft" data-delay="400"></div>
            </div>
        </div>
    </div>
</div>